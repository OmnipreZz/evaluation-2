{% extends 'base.html.twig' %}

{% block title %}Donation index{% endblock %}

{% block body %}
    <h1>Donations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Author</th>
                <th>Category</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for donation in donations %}
            <tr>
                <td>{{ donation.title }}</td>
                <td>{{ donation.description }}</td>
                <td>{{ donation.author }}</td>
                <td>{{ donation.category.name }}</td>
                <td>{{ donation.createdAt ? donation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('donation_show', {'id': donation.id}) }}" class="btn btn-dark" role="button"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('donation_edit', {'id': donation.id}) }}" class="btn btn-dark" role="button"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('donation_delete', {'id': donation.id}) }}" class="btn btn-dark" role="button"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
